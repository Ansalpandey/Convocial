<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ProjectX" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">#000000</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon</item>
        <!-- Required for animated icons. -->
        <item name="windowSplashScreenAnimationDuration">4000</item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.ProjectX</item>
    </style>
</resources>